{% extends 'base.html.twig' %}

{% block title %}{{ bank_account.accountNumber }} - Hyperion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/bank_account.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">Bank Account Details</h2>
                    <div class="btn-group">
                        <a href="{{ path('app_bank_account_edit', {'id': bank_account.id}) }}" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a href="{{ path('app_bank_account_index') }}" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-list me-1"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-bordered">
                                <tr>
                                    <th class="bg-light">ID</th>
                                    <td>{{ bank_account.id }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Bank</th>
                                    <td>{{ bank_account.bank.name }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Account Number</th>
                                    <td>{{ bank_account.accountNumber }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Agency</th>
                                    <td>{{ bank_account.agency }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-bordered">
                                <tr>
                                    <th class="bg-light">Account Type</th>
                                    <td>
                                        <span class="badge badge-type-{{ bank_account.type|lower }}">
                                            {{ bank_account.type }}
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Balance</th>
                                    <td class="fw-bold text-success">
                                        R$ {{ bank_account.balance|number_format(2, ',', '.') }}
                                    </td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Account Holder</th>
                                    <td>{{ bank_account.accountHolder ?? 'N/A' }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Bank CNPJ</th>
                                    <td class="cnpj">{{ bank_account.bank.cnpj }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="mt-4">
                        <h5 class="mb-3">Bank Information</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <strong>Corporate Name:</strong> {{ bank_account.bank.nomeEmpresarial }}
                            </div>
                            <div class="col-md-6">
                                <strong>Total Accounts in Bank:</strong> 
                                <span class="badge bg-secondary">{{ bank_account.bank.bankAccounts|length }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Format CNPJ display
        const cnpjElement = document.querySelector('.cnpj');
        if (cnpjElement) {
            const cnpj = cnpjElement.textContent.trim();
            if (cnpj.length === 14) {
                cnpjElement.textContent = cnpj.replace(/^(\d{2})(\d{3})(\d{3})(\d{4})(\d{2})/, '$1.$2.$3/$4-$5');
            }
        }
    </script>
{% endblock %}