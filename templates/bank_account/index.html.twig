{% extends 'base.html.twig' %}

{% block title %}Bank Accounts - Hyperion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/bank_account.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">Bank Accounts Management</h2>
                    <a href="{{ path('app_bank_account_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add New Account
                    </a>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>{{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    {% if bank_accounts|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Bank</th>
                                        <th>Account Number</th>
                                        <th>Agency</th>
                                        <th>Type</th>
                                        <th>Balance</th>
                                        <th>Account Holder</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for account in bank_accounts %}
                                        <tr>
                                            <td>{{ account.id }}</td>
                                            <td>{{ account.bank.name }}</td>
                                            <td>{{ account.accountNumber }}</td>
                                            <td>{{ account.agency }}</td>
                                            <td>
                                                <span class="badge badge-type-{{ account.type|lower }}">
                                                    {{ account.type }}
                                                </span>
                                            </td>
                                            <td class="fw-bold text-success">
                                                R$ {{ account.balance|number_format(2, ',', '.') }}
                                            </td>
                                            <td>{{ account.accountHolder ?? 'N/A' }}</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{{ path('app_bank_account_show', {'id': account.id}) }}" 
                                                       class="btn btn-outline-primary" 
                                                       title="View">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_bank_account_edit', {'id': account.id}) }}" 
                                                       class="btn btn-outline-secondary" 
                                                       title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="post" 
                                                          action="{{ path('app_bank_account_delete', {'id': account.id}) }}" 
                                                          onsubmit="return confirm('Are you sure you want to delete this bank account?');"
                                                          class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ account.id) }}">
                                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-credit-card fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No bank accounts found</h4>
                            <p class="text-muted">Get started by adding your first bank account.</p>
                            <a href="{{ path('app_bank_account_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add New Account
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}