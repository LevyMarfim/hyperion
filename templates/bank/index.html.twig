{% extends 'bank/base.html.twig' %}

{% block title %}Banks - Hyperion{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">Banks Management</h2>
                    <a href="{{ path('app_bank_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add New Bank
                    </a>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>{{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    {% if banks|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Bank Name</th>
                                        <th>CNPJ</th>
                                        <th>Corporate Name</th>
                                        <th>Accounts</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for bank in banks %}
                                        <tr>
                                            <td>{{ bank.id }}</td>
                                            <td>{{ bank.name }}</td>
                                            <td class="cnpj">{{ bank.cnpj }}</td>
                                            <td>{{ bank.nomeEmpresarial }}</td>
                                            <td>
                                                <span class="badge bg-secondary">{{ bank.bank|length }}</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{{ path('app_bank_show', {'id': bank.id}) }}" 
                                                       class="btn btn-outline-primary" 
                                                       title="View">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_bank_edit', {'id': bank.id}) }}" 
                                                       class="btn btn-outline-secondary" 
                                                       title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="post" 
                                                          action="{{ path('app_bank_delete', {'id': bank.id}) }}" 
                                                          onsubmit="return confirm('Are you sure you want to delete this bank?');"
                                                          class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ bank.id) }}">
                                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-university fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No banks found</h4>
                            <p class="text-muted">Get started by adding your first bank.</p>
                            <a href="{{ path('app_bank_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add New Bank
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Format CNPJ display
        document.querySelectorAll('.cnpj').forEach(element => {
            const cnpj = element.textContent.trim();
            if (cnpj.length === 14) {
                element.textContent = cnpj.replace(/^(\d{2})(\d{3})(\d{3})(\d{4})(\d{2})/, '$1.$2.$3/$4-$5');
            }
        });
    </script>
{% endblock %}