{% extends 'base.html.twig' %}

{% block title %}Transaction #{{ transaction.id }} - Hyperion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/transaction.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">Transaction Details</h2>
                    <div class="btn-group">
                        <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}" class="btn btn-outline-secondary btn-sm">
                            <i class="fas fa-edit me-1"></i>Edit
                        </a>
                        <a href="{{ path('app_transaction_index') }}" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-list me-1"></i>Back to List
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <h4 class="{{ transaction.type == 'INCOME' ? 'text-success' : 'text-danger' }}">
                                {{ transaction.amountWithSign }}
                            </h4>
                            <h5>{{ transaction.description }}</h5>
                            <p class="text-muted mb-0">
                                <i class="fas fa-calendar me-1"></i>
                                {{ transaction.transactionDate|date('F j, Y \\a\\t H:i') }}
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <span class="badge badge-type-{{ transaction.type|lower }} fs-6">
                                {{ transaction.type }}
                            </span>
                            <br>
                            <span class="badge bg-secondary mt-2">{{ transaction.category }}</span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-bordered">
                                <tr>
                                    <th class="bg-light">Transaction ID</th>
                                    <td>{{ transaction.id }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Bank Account</th>
                                    <td>
                                        {{ transaction.bankAccount.bank.name }} 
                                        <small class="text-muted">(#{{ transaction.bankAccount.id }})</small>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Bank</th>
                                    <td>{{ transaction.bankAccount.bank.name }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Category</th>
                                    <td>{{ transaction.category }}</td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-bordered">
                                <tr>
                                    <th class="bg-light">Recipient</th>
                                    <td>{{ transaction.recipient ?? 'N/A' }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Sender</th>
                                    <td>{{ transaction.sender ?? 'N/A' }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Created</th>
                                    <td>{{ transaction.createdAt|date('d/m/Y H:i') }}</td>
                                </tr>
                                <tr>
                                    <th class="bg-light">Last Updated</th>
                                    <td>{{ transaction.updatedAt|date('d/m/Y H:i') }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    {% if transaction.notes %}
                    <div class="row mt-4">
                        <div class="col-12">
                            <h6>Notes:</h6>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <p class="mb-0">{{ transaction.notes }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}