{% extends 'base.html.twig' %}

{% block title %}Transactions - Hyperion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/transaction.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">Transactions Management</h2>
                    <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Add New Transaction
                    </a>
                </div>
                <div class="card-body">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>{{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    {% if transactions|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Account</th>
                                        <th>Description</th>
                                        <th>Type</th>
                                        <th>Category</th>
                                        <th>Amount</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for transaction in transactions %}
                                        <tr>
                                            <td>{{ transaction.transactionDate|date('d/m/Y H:i') }}</td>
                                            <td>
                                                <small class="text-muted">
                                                    {{ transaction.bankAccount.bank.name }} #{{ transaction.bankAccount.id }}
                                                </small>
                                            </td>
                                            <td>{{ transaction.description }}</td>
                                            <td>
                                                <span class="badge badge-type-{{ transaction.type|lower }}">
                                                    {{ transaction.type }}
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-secondary">{{ transaction.category }}</span>
                                            </td>
                                            <td class="fw-bold {{ transaction.type == 'INCOME' ? 'text-success' : 'text-danger' }}">
                                                {{ transaction.amountWithSign }}
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}" 
                                                       class="btn btn-outline-primary" 
                                                       title="View">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}" 
                                                       class="btn btn-outline-secondary" 
                                                       title="Edit">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <form method="post" 
                                                          action="{{ path('app_transaction_delete', {'id': transaction.id}) }}" 
                                                          onsubmit="return confirm('Are you sure you want to delete this transaction?');"
                                                          class="d-inline">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ transaction.id) }}">
                                                        <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="fas fa-exchange-alt fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">No transactions found</h4>
                            <p class="text-muted">Get started by recording your first transaction.</p>
                            <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Add New Transaction
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}