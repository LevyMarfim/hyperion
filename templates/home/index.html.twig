        <div class="row align-items-center min-vh-100 py-5">
            <div class="col-lg-6 fade-in-up">
                <div class="hero-card p-4 p-md-5">
                    <div class="hero-logo">
                        <i class="fas fa-cube"></i>
                    </div>
                    <h1 class="display-4 fw-bold text-dark mb-4">
                        Welcome to <span class="text-primary">Hyperion</span>
                    </h1>
                    <p class="lead text-muted mb-4">
                        Transform your workflow with our powerful, intuitive platform. 
                        Join thousands of users who trust Hyperion for their daily operations.
                    </p>
                    <div class="d-flex flex-column flex-sm-row gap-3">
                        {% if app.user %}
                            <a href="#" class="btn btn-primary">
                                <i class="fas fa-rocket me-2"></i>Go to Dashboard
                            </a>
                        {% else %}
                            <a href="{{ path('app_register') }}" class="btn btn-primary">
                                <i class="fas fa-rocket me-2"></i>Get Started Free
                            </a>
                        {% endif %}
                        <a href="#features" class="btn btn-outline-primary">
                            <i class="fas fa-play-circle me-2"></i>Learn More
                        </a>
                    </div>
                    
                    <!-- Stats -->
                    <div class="row mt-5 pt-4 text-center">
                        <div class="col-4">
                            <div class="stats-number">10K+</div>
                            <small class="text-muted">Users</small>
                        </div>
                        <div class="col-4">
                            <div class="stats-number">99.9%</div>
                            <small class="text-muted">Uptime</small>
                        </div>
                        <div class="col-4">
                            <div class="stats-number">24/7</div>
                            <small class="text-muted">Support</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block fade-in-up" style="animation-delay: 0.2s;">
                <div class="text-center">
                    <div class="feature-icon mx-auto mb-3">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h4 class="fw-bold text-white">Secure & Reliable</h4>
                    <p class="text-light mb-4">Enterprise-grade security for your peace of mind</p>
                    
                    <div class="feature-icon mx-auto mb-3">
                        <i class="fas fa-bolt"></i>
                    </div>
